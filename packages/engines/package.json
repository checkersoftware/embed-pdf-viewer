{
  "name": "@embedpdf/engines",
  "version": "1.0.0",
  "description": "core components of embedpdf",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./pdfium": {
      "types": "./dist/pdfium.d.ts",
      "import": "./dist/pdfium.js",
      "require": "./dist/pdfium.cjs"
    },
    "./worker": {
      "types": "./dist/worker.d.ts",
      "import": "./dist/worker.js",
      "require": "./dist/worker.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "PROJECT_CWD=$(pwd) pnpm -w p:clean",
    "lint": "PROJECT_CWD=$(pwd) pnpm -w p:lint",
    "lint:fix": "PROJECT_CWD=$(pwd) pnpm -w p:lint:fix",
    "typecheck": "PROJECT_CWD=$(pwd) pnpm -w p:typecheck"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Bob Singor, Ji Chang",
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "dependencies": {
    "@embedpdf/models": "workspace:*",
    "@embedpdf/pdfium": "workspace:*",
    "buffer": "^6.0.3",
    "process": "^0.11.10"
  },
  "publishConfig": {
    "access": "public"
  }
}
